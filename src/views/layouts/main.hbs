<script>
    $(document).ready( function () {
        var dataSet = [
            {{#each clientes}}
                ['{{inc @index}}',
                    '{{Nombre}} {{Apellido_paterno}} {{Apellido_materno}}',
                    '{{Email}}',
                    '{{Telefono}}',
                    '{{Prestamo.Monto_total}}',
                    '{{Prestamo.Monto_restante}}',
                    '<a data-toggle="tooltip" data-placement="top" title="Perfil (Información)" href="/admin/clientes/profile/{{id}}" class="btn btn-link btn-info btn-just-icon like"><i class="material-icons">account_circle</i></a> <a data-toggle="tooltip" data-placement="top" title="Documentación" href="/admin/clientes/documento/{{id}}" class="btn btn-link btn-warning btn-just-icon edit"><i class="material-icons">picture_as_pdf</i></a>   <a data-toggle="tooltip" data-placement="top" title="Eliminar" href="/admin/delete/{{id}}" class="btn btn-link btn-danger btn-just-icon remove"><i class="material-icons">close</i></a>'
                ],
            {{/each}}
        ];

        $('#table_id').DataTable({
            data: dataSet,
            language: {
                searchPlaceholder: "Buscar",
            },
            serverside: true,
            responsive:{
                details:false
            },
            columnDefs: [
            ]
        });
    } );
</script>

<script>
    $(document).ready(function () {
        $('input[type="file"]').on('change', function(){
            var ext = $( this ).val().split('.').pop();
            if ($( this ).val() != '') {
                if(ext == "pdf"){
                    if($(this)[0].files[0].size > 5242880){
                        alert("El tamaño máximo permitido es de 5mb ");
                        $(this).val('');
                    }
                }
                else
                {
                    $( this ).val('');
                    alert("Extensión no permitida: " + ext);
                }
            }
        });
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        $(".nav>li").each(function() {
            var navItem = $(this);
            if (navItem.find("a").attr("href") == location.pathname) {
                $('.sidebar .active').removeClass('active');
                navItem.addClass("active");
            }
        });
        // initialise Datetimepicker and Sliders
        md.initFormExtendedDatetimepickers()
        if ($('.slider').length !== 0) {
            md.initSliders()
        }
    })
</script>

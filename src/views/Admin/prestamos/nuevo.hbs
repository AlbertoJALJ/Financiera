<div class="card ">
    <div class="card-header card-header-rose card-header-icon">
        <div class="card-icon">
            <i class="material-icons">mail_outline</i>
        </div>
        <h4 class="card-title">Stacked Form</h4>
    </div>
    <div class="card-body ">
        <div class="form-group">
            <label for="exampleEmail" class="bmd-label-floating">Monto</label>
            <input type="number" required  class="form-control" id="monto_prestamo">
        </div>
        <div class="form-group">
            <label for="examplePass" class="bmd-label-floating">Duración (meses)</label>
            <input type="number"  class="form-control" id="duracion">
        </div>
        <div class="form-group">
            <label for="examplePass" class="bmd-label-floating">Porcentaje de interés</label>
            <input type="number" class="form-control" id="interes">
        </div>
    </div>
    <div class="card-footer ">
        <button type="button" id="boton_modal" class="btn btn-fill btn-rose" data-toggle="modal"
                data-target="#exampleModal">
            Launch demo modal
        </button>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <form method="POST" action="/clientes/prestamo/nuevo/{{cliente.id}}">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <label class="col-md-3 col-form-label">Monto</label>
                        <div class="col-md-9">
                            <div class="form-group has-default">
                                <input readonly type="number" name="Monto_prestamo" id="monto_prestamo_modal" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3 col-form-label">Duración (meses)</label>
                        <div class="col-md-9">
                            <div class="form-group has-default">
                                <input readonly type="number" name="Duracion" id="duracion_modal" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3 col-form-label">Interés %</label>
                        <div class="col-md-9">
                            <div class="form-group has-default">
                                <input readonly type="number" name="Interes" id="interes_modal" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3 col-form-label">Monto total</label>
                        <div class="col-md-9">
                            <div class="form-group has-default">
                                <input readonly type="number" name="Monto_total" id="monto_total_modal" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3 col-form-label">Monto de pago previsto</label>
                        <div class="col-md-9">
                            <div class="form-group">
                                <input readonly type="number" name="Pago_previsto" id="monto_previsto_modal" class="form-control">
                                <input id="Monto_interes" name="Monto_interes" type="hidden" value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>
